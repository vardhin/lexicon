{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "shell-capability",
  "description": "Shell execution capability for running commands",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".*" }],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".*" }],
          "sidecar": false
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-open"
  ]
}
